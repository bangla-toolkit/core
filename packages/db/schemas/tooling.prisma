/// Represents the type of data source
enum datasources_type {
  /// MySQL dump file
  mysql_dump
  /// PostgreSQL dump file
  postgres_dump
  /// CSV file
  csv
  /// JSON file
  json
  /// YAML file
  yaml
  /// XML file
  xml
  /// HTML file
  html
  /// Markdown file
  markdown
  /// Text file
  text

  @@schema("warehouse")
}

/// Represents a data source that provides data for the application
model datasources {
  /// Unique identifier for the data source
  id         Int              @id @default(autoincrement())
  /// Name of the data source
  name       String
  /// Type of data source (e.g., "file", "api", "database")
  type       datasources_type
  /// URL or path to the data source
  url        String
  /// Timestamp when the data source was created
  created_at DateTime         @default(now())
  /// Timestamp when the data source was last updated
  updated_at DateTime         @updatedAt
  sentences  sentences[]

  @@schema("warehouse")
}

{
  "name": "bntk",
  "private": true,
  "version": "0.0.0",
  "homepage": "https://bangla-toolkit.github.io/core/",
  "description": "Build applications with Bengali natural language processing tools.",
  "keywords": [
    "bangla",
    "bengali",
    "bangla toolkit",
    "bntk",
    "bangla toolkit",
    "bangla natural language processing",
    "bangla natural language toolkit",
    "nlp"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/bangla-toolkit/core.git"
  },
  "author": {
    "name": "Nurul Huda (Apon)",
    "email": "me@nurulhudaapon.com",
    "url": "https://nurulhudaapon.com"
  },
  "scripts": {
    "build": "bun tools/build.ts",
    "publish": "bun tools/publish.ts",
    "format": "prettier --write --ignore-path .prettierignore --config .prettierrc .",
    "check": "bun tsc --noEmit && :",
    "etl": "bun -F @bntk/dataset etl",
    "db:migration": "bun -F @bntk/db migration",
    "docs": "bun tools/docs.ts",
    "docs:dev": "npm start --prefix docs",
    "prepare": "husky"
  },
  "workspaces": [
    "packages/*",
    "packages/core/*",
    "apps/*"
  ],
  "files": [
    "dist/cli.js"
  ],
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/bun": "latest",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": "bun check",
    "*.{ts,json,js,css,md}": "prettier --write"
  }
}
